{
  "name": "@textile/thread-db",
  "version": "0.0.0",
  "description": "ThreadDB Javascript implementation",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "browser": "dist/index.browser.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./index.js": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:rollup",
    "build:tsc": "tsc",
    "build:rollup": "rollup -c",
    "clean": "rimraf ./dist ./coverage ./build ./.nyc_output ./tsconfig.tsbuildinfo",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "polendina src/**/*.spec.ts --webpack-config=./webpack.test.js",
    "test:node": "env TS_NODE_FILES=true TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' nyc --reporter=lcov mocha",
    "lint": "eslint",
    "docs": "typedoc",
    "version": "standard-version",
    "textile:check": "npx ncu '/^@textile/.*$/'",
    "textile:update": "npx ncu -u '/^@textile/.*$/'"
  },
  "keywords": [
    "database",
    "ipfs",
    "textile",
    "local-first",
    "p2p"
  ],
  "author": "Textile <contact@textile.io>",
  "license": "MIT",
  "devDependencies": {
    "@babel/polyfill": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "mocha": "^8.1.3",
    "mocha-explorer-launcher-scripts": "^0.3.0",
    "nyc": "^15.1.0",
    "polendina": "^1.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "standard-version": "^9.0.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.1",
    "typedoc": "^0.19.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.13.0",
    "@ipld/block": "^6.0.3",
    "@textile/context": "^0.6.8",
    "@textile/crypto": "^0.1.0",
    "@textile/grpc-transport": "0.0.3",
    "@textile/threads-client": "^1.0.0-alpha.0",
    "@textile/threads-client-grpc": "^1.0.0-rc1",
    "@textile/threads-id": "^0.1.13",
    "@types/json-schema": "^7.0.6",
    "@types/to-json-schema": "^0.2.0",
    "dexie": "^3.0.2",
    "dexie-mongoify": "^1.3.0",
    "fast-json-patch": "^3.0.0-1",
    "indexeddbshim": "^6.6.0",
    "is-plain-object": "^4.1.1",
    "json-schema": "^0.2.5",
    "mingo": "^3.0.6",
    "to-json-schema": "^0.2.5",
    "ulid": "^2.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "mocha": {
    "spec": "**/*.spec.ts",
    "reporter": "spec",
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "exit": true,
    "esmLoader": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript"
  }
}
